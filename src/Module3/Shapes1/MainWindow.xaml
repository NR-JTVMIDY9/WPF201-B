<Window x:Class="Shapes1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Shapes1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <UniformGrid Rows="2" Columns="4">
        <Polyline Points="40,0 50,20 70,10 60,30 80,40 60,50 70,70
            50,60 40,80 30,60 10,70 20,50 0,40 20,30 10,10 30,20 40,0"
            Stroke="Black" StrokeThickness="2" />
        <Polygon Points="40,0 50,20 70,10 60,30 80,40 60,50 70,70
            50,60 40,80 30,60 10,70 20,50 0,40 20,30 10,10 30,20"
            Stroke="Green" StrokeThickness="2"
            Fill="Aquamarine" />
        <Polygon Points="40,0 50,20 70,10 60,30 80,40 60,50 70,70
            50,60 40,80 30,60 10,70 20,50 0,40 20,30 10,10 30,20"
            Stroke="Green" StrokeThickness="2"
            Width="80" Height="40" Stretch="Fill"
            HorizontalAlignment="Right"
            VerticalAlignment="Bottom"
            Fill="Aquamarine" />
        <Polygon Points="40,0 50,20 70,10 60,30 80,40 60,50 70,70
            50,60 40,80 30,60 10,70 20,50 0,40 20,30 10,10 30,20"
            Stroke="Green" StrokeThickness="2"
            Stretch="Fill"
            Fill="Aquamarine" Margin="4" />
        <Polygon Points="40,0 50,20 70,10 60,30 80,40 60,50 70,70
            50,60 40,80 30,60 10,70 20,50 0,40 20,30 10,10 30,20"
            Stroke="Green" StrokeThickness="2"
            Stretch="Uniform"
            Fill="Aquamarine" Margin="4" />
        <Polygon Points="40,0 50,20 70,10 60,30 80,40 60,50 70,70
            50,60 40,80 30,60 10,70 20,50 0,40 20,30 10,10 30,20"
            Stroke="Maroon" StrokeThickness="8"
            Stretch="Uniform" StrokeLineJoin="Round"
            Fill="Red" Margin="4" />
        <Polygon Points="40,0 50,20 70,10 60,30 80,40 60,50 70,70
            50,60 40,80 30,60 10,70 20,50 0,40 20,30 10,10 30,20"
            Stroke="Maroon" StrokeThickness="8"
            Stretch="Uniform" StrokeLineJoin="Round"
            Fill="Red" Margin="4"
            StrokeDashArray="1 2 2 3"
            StrokeDashCap="Round"
            StrokeDashOffset="0.6" />
    </UniformGrid>
</Window>
